<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">

    <!-- Logo in the center -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:layout_centerInParent="true"
        android:src="@drawable/reimbify_logo"
        android:scaleType="centerInside"/>

    <!-- Text below the logo -->
    <TextView
        android:id="@+id/tv_splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Reimbify"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

    <!-- Coins placed at 4 sides around the logo -->
    <ImageView
        android:id="@+id/iv_coin_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/koin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="190dp"
        android:layout_marginStart="40dp" />

    <ImageView
        android:id="@+id/iv_coin_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/koin"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="40dp" />

    <ImageView
        android:id="@+id/iv_coin_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/koin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="190dp"
        android:layout_marginStart="40dp" />

    <ImageView
        android:id="@+id/iv_coin_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/koin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="190dp"
        android:layout_marginEnd="40dp" />

</RelativeLayout>
